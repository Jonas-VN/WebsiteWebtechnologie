extends layout 

block content 
  .container.page-container
    .col-md-10.col-lg-8.m-auto
      h6.title.mb-4.mt-5.pt-5 Bestel bustickets   

      form(method='POST' action='')
        label(for='yes_no_radio')  
        p
         input(type='checkbox' name='yes_no' checked='')
         | Drank + snack bij bestellen (5 euro extra)

        select(name='bus')
          each bus in busses
            option(value=bus._id) Bus #{bus.number} (Vertrekt om #{bus.departure_time})
        
        input.form-control(type='text' name='first_name' size='100%' placeholder='Je voornaam' required='')

        input.form-control(type='text' name='last_name' placeholder='Je familienaam' requried='')

        input.form-control(type='email' name='email' placeholder='Je email' requried='')

        input.form-control(type='text' name='birth_date' placeholder='Je geboortedatum' required='' onfocus="this.type='date'")

        input.form-control(type='hidden' required='' value='1')

        input.form-control(type='reset')
        
        input.form-control(type='submit' value='Bestel')
